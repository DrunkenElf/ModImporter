<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_notif"
    app:startDestination="@+id/navigation_favourites">

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.ilnur.modimporter.ui.favourites.FavouritesFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_favourites">

        <action
            android:id="@+id/action_nav_fav_to_nav_modinfo"
            app:destination="@id/navigation_modinfo"
            />

    </fragment>

    <fragment
        android:id="@+id/navigation_modinfo"
        android:name="com.ilnur.modimporter.ui.modinfo.ModinfoFragment"
        android:label="Modinfo"
        tools:layout="@layout/fragment_modinfo">


        <argument
            android:name="filename"
            app:argType="string"
            app:nullable="false"/>

    </fragment>


</navigation>